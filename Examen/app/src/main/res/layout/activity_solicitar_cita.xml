<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitar Nueva Cita"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#E91E63"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/nombrePerro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del perro"
        android:padding="16dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha (DD/MM/YYYY)"
        android:inputType="date"
        android:padding="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turno preferido:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/turno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/manana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MaÃ±ana"/>

        <RadioButton
            android:id="@+id/tarde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarde"/>

        <RadioButton
            android:id="@+id/indiferente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indiferente"/>

    </RadioGroup>

    <Button
        android:id="@+id/solicitar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solicitar Cita"
        android:backgroundTint="#E91E63"
        android:textColor="#FFFFFF"
        android:padding="16dp"/>

</LinearLayout>